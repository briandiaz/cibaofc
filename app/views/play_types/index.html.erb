<h1>Listing play_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @play_types.each do |play_type| %>
      <tr>
        <td><%= play_type.name %></td>
        <td><%= link_to 'Show', play_type %></td>
        <td><%= link_to 'Edit', edit_play_type_path(play_type) %></td>
        <td><%= link_to 'Destroy', play_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Play type', new_play_type_path %>
