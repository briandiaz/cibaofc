<h1>Listing plays</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>X coordinate</th>
      <th>Y coordinate</th>
      <th>By</th>
      <th>Assist by</th>
      <th>Playtype</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= play.time %></td>
        <td><%= play.x_coordinate %></td>
        <td><%= play.y_coordinate %></td>
        <td><%= play.by %></td>
        <td><%= play.assist_by %></td>
        <td><%= play.playtype %></td>
        <td><%= play.game %></td>
        <td><%= link_to 'Show', play %></td>
        <td><%= link_to 'Edit', edit_play_path(play) %></td>
        <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

