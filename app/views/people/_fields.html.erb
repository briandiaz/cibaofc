<div class="well">
  <fieldset>Datos Personales</fieldset><br/>
  <div class="row">
    <div class="col-md-6">
      
      <div class="form-group">
        <%= f.label :birthdate, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :birthdate, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:birthdate]) %>
      </div>
      
      <div class="form-group">
        <%= f.label :phone, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :phone, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:phone]) %>
      </div>
      <div class="form-group">
        <%= f.label :additional_phone, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :additional_phone, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:additional_phone]) %>
      </div>
      
      <div class="form-group">
        <%= f.label :country_id, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= select("person", "country_id", Country.all.collect {|p| [ p.name , p.id ] }, { include_blank: true }, :class => 'form-control' ) %>
        </div>
        <%= error_span(@person[:country_id]) %>
      </div>
    </div>
    
    <div class="col-md-6">
      
      <div class="form-group">
        <%= f.label :email, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:email]) %>
      </div>
      <div class="form-group">
        <%= f.label :mobile, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :mobile, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:mobile]) %>
      </div>
      
      <div class="form-group">
        <%= f.label :salary, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= f.text_field :salary, :class => 'form-control' %>
        </div>
        <%= error_span(@person[:salary]) %>
      </div>
      
      <div class="form-group">
        <%= f.label :city_id, :class => 'control-label col-sm-4' %>
        <div class="col-sm-8">
          <%= select("person", "city_id", City.eager_load(:country).collect {|p| [ p.name + " - " + p.country.name , p.id ] }, { include_blank: true }, :class => 'form-control' ) %>
        </div>
        <%= error_span(@person[:city_id]) %>
      </div>
      
    </div>
  </div>
</div>

