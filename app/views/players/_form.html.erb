  <%= form_for(@player, :class => "form-horizontal", :role=>"form") do |f| %>
      <fieldset>
    <% if @player.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>
  
        <ul>
        <% @player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="well well-sm">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <div class="pull-right">
              <%= f.submit class: "btn btn-md btn-primary" %>
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                        people_path, :class => 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <%= fields_for :person, @player.person do |person_fields| %>
      <%= render partial: "people/fields", :locals => { :@person => @player.person, :f => person_fields }%>
    <% end %>
    
    <%= render partial: "fields", :locals => { :@player => @player, :f => f }%>
    
    <div class="well well-sm">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <div class="pull-right">
              <%= f.submit class: "btn btn-md btn-primary" %>
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                        people_path, :class => 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    </fieldset>
  <% end %>
  
