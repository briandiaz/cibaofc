<h1>Listing substitutions</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Player in</th>
      <th>Player out</th>
      <th>Game</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @substitutions.each do |substitution| %>
      <tr>
        <td><%= substitution.time %></td>
        <td><%= substitution.player_in %></td>
        <td><%= substitution.player_out %></td>
        <td><%= substitution.game %></td>
        <td><%= substitution.team %></td>
        <td><%= link_to 'Show', substitution %></td>
        <td><%= link_to 'Edit', edit_substitution_path(substitution) %></td>
        <td><%= link_to 'Destroy', substitution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Substitution', new_substitution_path %>
