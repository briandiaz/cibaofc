source 'https://rubygems.org'
ruby '2.1.5'

# Rails 4.1
gem 'rails', '4.1.6'
# PostgreSQL
gem 'pg'
gem 'uglifier', '>= 1.3.0'

# CoffeScript
gem 'coffee-rails', '~> 4.0.0'

# Twitter Bootstrap
gem "therubyracer"
gem "less-rails" #Sprockets (what Rails 3.1 uses for its asset pipeline) supports LESS
gem "twitter-bootstrap-rails"

gem "omniauth"

# Jquery
gem 'jquery-rails'
gem 'turbolinks'

gem 'jbuilder', '~> 2.0'

# Real Time
gem 'faye'
gem 'thin', require: false
gem 'sync'

gem 'unicorn'

# Charts
gem 'morrisjs-rails'
gem 'raphael-rails'

# Documentation
gem 'annotate'


group :production do
  gem 'rails_12factor'
end

group :doc do
  gem 'sdoc', require: false
end

group :development, :test do 
  gem 'pry-rails'
  gem 'pry-nav'
  gem 'cucumber-rails'
  gem 'database_cleaner'
end